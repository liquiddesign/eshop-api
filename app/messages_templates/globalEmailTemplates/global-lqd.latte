{define footer_en}
    <br><br>
    Liquid design s.r.o.<br>
    info@roiwell.cz<br>
    +420 777 123 456
{/define}
{define order_items_table_cs}
    <table border="1" cellspacing="0" cellpadding="2">
        <tbody>
        <tr>
            <th>Kód</th>
            <th>Položka</th>
            <th>Mn.</th>
            <th>Celkem</th>
        </tr>
        </tbody>
        <tbody>
        {foreach $items as $item}
        <tr>
            <td>{$item["fullCode"]}</td>
            <td>{$item["productName"]["cs"]}</td>
            <td>{$item["amount"]}</td>
            <td>{@$item["totalPricePref"]}</td>
        </tr>
        {/foreach}
        {ifset $discountCoupon}
            <tr>
                <td>{$discountCoupon->code}</td>
                <td>{$discountCoupon->discount->name}</td>
                <td>{$discountCoupon->label}</td>
                <td>
                    {if $order->getDiscountPrice() != 0 || $order->getDiscountPriceVat() != 0}
                        {if $catalogPermission === 'price'}
                            {if $withVat && $withoutVat}
                                <div class="text-xl font-bold whitespace-no-wrap">{if $priorityPrices == 'withVat'}{-$order->getDiscountPriceVat()}{else}{-$order->getDiscountPrice()}{/if}</div>
                                <div class="text-sm text-gray-dark mt-1 lg:text-xs">{if $priorityPrices == 'withVat'}{_'.withoutVat','bez DPH'} {-$order->getDiscountPrice()}{else}{_'.withVat','s DPH'} {-$order->getDiscountPriceVat()}{/if}</div>
                            {else}
                                {if $withVat}
                                    <div class="text-xl font-bold whitespace-no-wrap">{-$order->getDiscountPriceVat()}</div>
                                {/if}
                                {if $withoutVat}
                                    <div class="text-xl font-bold whitespace-no-wrap">{-$order->getDiscountPrice()}</div>
                                {/if}
                            {/if}
                        {/if}
                    {/if}
                </td>
            </tr>
        {/ifset}
        </tbody>
    </table>
{/define}
{define order_items_table_en}
    <table border="1" cellspacing="0" cellpadding="2">
        <tbody>
        <tr>
            <th>Code</th>
            <th>Item</th>
            <th>Amount</th>
            <th>Total</th>
        </tr>
        </tbody>
        <tbody>
        {foreach $items as $item}
            <tr>
                <td>{$item["fullCode"]}</td>
                <td>{$item["productName"]["cs"]}</td>
                <td>{$item["amount"]}</td>
                <td>{$item["totalPrice"]}</td>
            </tr>
        {/foreach}
        </tbody>
    </table>
{/define}
