{
  "name": "liquiddesign/roiwell",
  "description": "Roiwell",
  "type": "project",
  "require": {
    "php": ">=8.1",
    "liquiddesign/eshop": "^1.0.0-beta.1",
    "liquiddesign/admin": "^0.2",
    "liquiddesign/base": "^1.0",
    "liquiddesign/sendgrid-mailer": "^1.0",
    "liquiddesign/email-templates": "^0.1",
    "liquiddesign/messages": "^0.1",
    "league/csv": "^9.0",
    "twitter/typeahead.js": "^0",
    "guzzlehttp/guzzle": "*",
    "latte/latte": "v2.11.0",
    "ext-intl": "*",
    "ext-pdo": "*",
    "ext-curl": "*",
    "ext-simplexml": "*",
    "ext-json": "*",
    "ext-soap": "*",
    "webonyx/graphql-php": "^14.0",
    "mll-lab/graphql-php-scalars": "^5.4",
    "contributte/psr7-http-message": "^0.8.0",
    "ext-zend-opcache": "*",
    "spatie/typescript-transformer": "^2.1",
    "simpod/graphql-utils": "^0.5.4"
  },
  "require-dev": {
    "nette/tester": "^2.4",
    "phpstan/phpstan-nette": "^1.0",
    "squizlabs/php_codesniffer": "~3.7",
    "slevomat/coding-standard": "~8.2"
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "autoload": {
    "psr-4": {
      "App\\": "app"
    }
  },
  "scripts": {
    "fix-code": ["@phpcsfix"],
    "check-code": ["@phpcs", "@phpstan"],
    "phpstan": "phpstan analyse --memory-limit 4G -c phpstan.neon",
    "phpcs": "phpcs --standard=ruleset.xml --ignore=*/tests/* --cache ./app",
    "phpcsfix": "phpcbf --standard=ruleset.xml --cache ./app",
    "phpcheck": "phpcs -p ./app --standard=vendor/phpcompatibility/php-compatibility/PHPCompatibility --runtime-set testVersion 8.1",
    "init-develop": "App\\Scripts::initDevel",
    "init-production": "App\\Scripts::initProduction",
    "clear-nette-cache": "App\\Scripts::clearNetteCache",
    "maintenance": 	"App\\Scripts::maintenance",
    "create-database": "Migrator\\Scripts::createDatabase",
    "sync-database": [
      "App\\Scripts::clearNetteCache",
      "Migrator\\Scripts::syncDatabase"
    ],
    "deploy-front": [
      "git pull",
      "cd ./public && npm install && npm run deploy",
      "@clear-nette-cache"
    ],
    "deploy": [
      "@maintenance on",
      "@deploy-front",
      "composer clear-cache",
      "composer install --no-dev --no-interaction",
      "@sync-database",
      "@clear-nette-cache",
      "@maintenance off"
    ],
    "update-templates": "Messages\\Scripts::createTemplates",
    "update-pages": "App\\Scripts::createPages",
    "reproduce": "App\\Scripts::reproduce",
    "test": "vendor/bin/tester -C ./tests"
  },
  "config": {
    "allow-plugins": {
      "symfony/thanks": true,
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
